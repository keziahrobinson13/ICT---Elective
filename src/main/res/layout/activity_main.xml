<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnAddData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Data"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="426dp" />

    <Button
        android:id="@+id/btnViewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Data"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="492dp" />

    <Button
        android:id="@+id/btnUpdataData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Data"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="566dp" />

    <Button
        android:id="@+id/btnDeleteData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Data"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="634dp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="26dp" />

    <EditText
        android:id="@+id/Surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Surname"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="79dp" />

    <EditText
        android:id="@+id/Pet_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Pet Name"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="134dp" />

    <EditText
        android:id="@+id/Previous_Diagnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Previous Diagnosis"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="179dp" />

    <EditText
        android:id="@+id/Previous_Prescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Previous Prescription"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="224dp" />

    <EditText
        android:id="@+id/Account_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Account Number"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="269dp" />

</androidx.constraintlayout.widget.ConstraintLayout>